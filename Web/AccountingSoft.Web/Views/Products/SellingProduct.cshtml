@model AccountingSoft.Web.ViewModels.Product.ProductViewModel


@{
    ViewData["Title"] = "Edit";
}

<h1>Изписване на продукт</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SellingProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Име</label>
                <input readonly="readonly" asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label">Количество</label>
                <input readonly="readonly" asp-for="Qty" class="form-control" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SellingQty" class="control-label">Количество за изписване</label>
                <input asp-for="SellingQty" class="form-control" />
                <span asp-validation-for="SellingQty" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" asp-for="Sum" class="form-control" />
                <input type="hidden" asp-for="Qty" class="form-control" />
                <input type="hidden" asp-for="SinglePrice" class="form-control" />
                <input type="hidden" asp-for="ClientId" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Изпиши" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>