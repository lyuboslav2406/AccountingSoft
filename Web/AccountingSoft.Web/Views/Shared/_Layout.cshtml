@using AccountingSoft.Common

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />                                  
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link text-dark" data-toggle="dropdown" role="button" aria-expanded="false">Клиент <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-area="" asp-controller="Clients" asp-action="Index">Всички клиенти</a></li>
                                <li><a asp-area="" asp-controller="Clients" asp-action="Create">Създай клиент</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="nav-link text-dark" data-toggle="dropdown" role="button" aria-expanded="false">Продукт <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-area="" asp-controller="Products" asp-action="Index">Всички продукти</a></li>
                                <li><a asp-area="" asp-controller="Products" asp-action="Create">Създай продукт</a></li>
                            </ul>
                        </li>
                        <li class="nav-link text-dark" onchange="SaveClientToMemoryCache()" >
                            @await Component.InvokeAsync("Client")
                        </li>                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @this.RenderSection("Scripts", required: false)
    <script type="text/javascript">
        function SaveClientToMemoryCache() {
            jQuery.ajaxSettings.traditional = true;
            var selected = $('#selectClient').val();
            $.ajax({
                url: "/Clients/SaveClientToMemoryCache",
                type: "GET",
                data: { selected },
                dataType: "html",
                contentType: "application/html; charset-utf-8",
                success: function () {
                    alert("Селектиран клиент за работа " + selected + " !");
                },
                error: function () {
                    alert("ujs");
                }
                
            });
        }
    </script>
</body>
</html>
